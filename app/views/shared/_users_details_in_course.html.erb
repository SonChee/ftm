<h3>Enrolled users into this course</h3>
<%= link_to 'Assignment Supervisor', new_supervisor_course_assignment_path(@course), class: "btn btn-medium btn-primary"%>

<% if @assignments.any? %>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Bio</th>
        <th>Edit</th>
      </tr>
      </thead>
      <% @assignments.each do |assignment| %>
          <tbody>
          <tr>
            <td><%= link_to assignment.user.name, assignment.user %></td>
            <td><%= assignment.user.email %></td>
            <td><%= assignment.user.profile %></td>
            <td><%= link_to "Edit", edit_supervisor_trainee_path(assignment.user.id) %></td>
          </tr>
          </tbody>
      <% end %>
    </table>

<% end %>